@model List<Alkemy_Proyect_1.Models.ViewModels.ListStudentViewModel>
@{
    ViewBag.Title = "List of Students";
}

<h2>@ViewBag.Title</h2>
<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Students/AddNewStudent" class="btn btn-primary">ADD NEW </a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Dni</th>
                <th>Docket</th>
                <th>Options</th>
            </tr>
            @foreach (var index in Model)
            {
                <tr>
                    <td>@index.Id</td>
                    <td>@index.Name</td>
                    <td>@index.Lastname</td>
                    <td>@index.Dni</td>
                    <td>@index.Docket</td>
                    <td>
                        <a class="btn btn-default" href="~/Students/EditStudent/@index.Id">EDIT</a>
                        <a class="btn btn-danger" href="~/Students/DeleteStudent/@index.Id">DELETE</a>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>
