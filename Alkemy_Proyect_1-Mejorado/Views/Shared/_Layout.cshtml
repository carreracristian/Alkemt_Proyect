<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ALKEMY UNIVERSITY</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @using Alkemy_Proyect_1.Controllers;
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ALKEMY UNIVERSITY", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (StudentsController.MyIdRol == 2)
                    {

                        <li>@Html.ActionLink("Subjects", "Index", "Subjects")</li>
                        <li>@Html.ActionLink("My inscriptions", "MyInscriptions", "Students")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Teachers", "Index", "Teachers")</li>
                        <li>@Html.ActionLink("Inscriptions", "Index", "Inscriptions")</li>
                        <li>@Html.ActionLink("Students", "Index", "Students")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ALKEMY UNIVERSITY</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
