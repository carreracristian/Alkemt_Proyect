@model Alkemy_Proyect_1.Models.ViewModels.AddInscriptionsViewModel

@{
    ViewBag.Title = "ADD NEW INSCRIPTION";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddNewInscription", "Inscriptions", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.Id_student)
                @Html.TextBoxFor(d => d.Id_student, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Id_student, null, new { @style = "color:red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Id_subject)
                @Html.TextBoxFor(d => d.Id_subject, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Id_subject, null, new { @style = "color:red" })
            </div>
            <br />
            <div style="text-align:right;">
                <input type="submit" value="SEND" class="btn btn-primary" />
            </div>
        </div>

    </div>
}